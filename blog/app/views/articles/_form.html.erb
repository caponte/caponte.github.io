<% name ||= "Crear"%> 
<h1><%= name%> artículo</h1>
<%= form_for(@articles) do |f|%>
	<% @articles.errors.full_messages.each do |message|%>
		<div class="top-space red">
			* <%= message %>
		</div>
	<%end%>
	<div class="field">
		<%= f.text_field :tittle, placeholder: "Título", class:"form-control" %>
	</div>
	<div class="field">
		<%= f.text_area :body, placeholder: "Escribe aquí el cuerpo de tu artículo.", style:"height:250px;", class:"form-control" %>	
	</div>
	<div class="field">
		<%= f.submit "Guardar", class:"btn be-red white"%>
	</div>

<%end%>
